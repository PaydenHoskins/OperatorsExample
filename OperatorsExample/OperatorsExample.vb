Module OperatorsExample

    Sub Main()
        Console.Beep(262, 1000)

        'sum operator
        Console.Write("5 + 3 = ") 'print a string
        Console.WriteLine(5 + 3) 'Print the sum
        Console.WriteLine()

        'Subtraction operator
        Console.Write("5 - 3 = ") 'print a string
        Console.WriteLine(5 - 3) 'Print the diffrence
        Console.WriteLine()

        'multipication operator
        Console.Write("5 * 3 = ") 'print a string
        Console.WriteLine(5 * 3) 'Print the product
        Console.WriteLine()

        'floating point division operator
        Console.Write("5 / 3 = ") 'print a string
        Console.WriteLine(5 / 3) 'Print the floating point quotient
        Console.WriteLine()

        'integer division operator
        Console.Write("5 \ 3 = ") 'print a string
        Console.WriteLine(5 \ 3) 'Print the quotient
        Console.WriteLine()

        'Modulus operator
        Console.Write("5 mod 3 = ") 'print a string
        Console.WriteLine(5 Mod 3) 'Print the remainder
        Console.WriteLine()

        'exponent operator
        Console.Write("5 ^ 3 = ") 'print a string
        Console.WriteLine(5 ^ 3) 'Print the exponent
        Console.WriteLine()


    End Sub

End Module
